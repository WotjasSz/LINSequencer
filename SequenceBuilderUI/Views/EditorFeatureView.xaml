<UserControl x:Class="SequenceBuilderUI.Views.EditorFeatureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequenceBuilderUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>            
            <RowDefinition Height="*"/>            
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" x:Name="PropertiesVm"/>        
        <ContentControl Grid.Row="1" x:Name="FunctionVm"/>
        <GridSplitter Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" ResizeDirection="Rows" BorderThickness="1" BorderBrush="#999999"/>
    </Grid>
</UserControl>
