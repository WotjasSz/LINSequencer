<UserControl x:Class="SequenceBuilderUI.Views.SequencePanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequenceBuilderUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center">Select sequence</TextBlock>
        <ComboBox ItemsSource="{Binding Path=Sequences}" MinWidth="200">
            
        </ComboBox>
        <TextBlock HorizontalAlignment="Center">Select BabyLIN</TextBlock>
        <ComboBox ItemsSource="{Binding Path=Devices}" MinWidth="200"/>
        <Button x:Name="LoadSequence" Content="Load"/>
    </StackPanel>
</UserControl>
