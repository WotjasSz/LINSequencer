<UserControl x:Class="SequenceBuilderUI.Views.PropertiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequenceBuilderUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <StackPanel>
        <TextBlock Text="Name"/>
        <TextBlock Text="{Binding Name}"/>
        <TextBlock Text="User name"/>
        <TextBox Text="{Binding UserName}"/>
        <DataGrid ItemsSource="{Binding ParameterList}"
                  SelectedItem="{Binding SelectedParameter}" AutoGenerateColumns="True"/>
    </StackPanel>
</UserControl>
