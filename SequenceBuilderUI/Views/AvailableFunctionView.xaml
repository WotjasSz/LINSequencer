<UserControl x:Class="SequenceBuilderUI.Views.AvailableFunctionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequenceBuilderUI.Views"
             xmlns:cm="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <ListView ItemsSource="{Binding SequenceFunction}"
                  SelectedItem="{Binding SelectedFunction}"
                  cm:Message.Attach="[Event SelectionChanged] = [Action DragSelectedFunction($eventArgs)]"
                  Width="300" AllowDrop="True"/>
    </Grid>
</UserControl>
