<UserControl x:Class="SequencerUI.Views.StepParametersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequencerUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Comment"
                           Foreground="{StaticResource Foreground_5}"/>
                <TextBox Text="{Binding Comment}"
                         Foreground="{StaticResource Foreground_3}"
                         Background="{StaticResource Background_3}"
                         TextWrapping="Wrap"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Input"
                           Foreground="{StaticResource Foreground_5}"/>
                <ItemsControl ItemsSource="{Binding InputParameters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5"
                                    BorderBrush="{StaticResource Primary_3}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" Foreground="{StaticResource Foreground_5}"/>
                                    <TextBox Text="{Binding ParamValue}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Output"
                           Foreground="{StaticResource Foreground_5}"/>
                <ItemsControl>

                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
